{
  "name": "NewRelic for Google Chrome",
  "version": "0.4.0",
  "description": "Track user happiness and app performance for all your Rails apps in real-time with NewRelic and Hoptoad. Now supports Heroku too!",
  "icons": { "16":  "/images/icons/app-16.jpg",
             "48":  "/images/icons/app-48.jpg",
             "128": "/images/icons/app-128.jpg" },

  "browser_action": {
    "default_icon": "/images/icons/app-16.jpg",
    "popup":        "/screens/hud.html"
  },
  "background_page": "/daemon.html",
  "options_page": "/screens/config.html",
  "permissions": [
    "notifications",
    "https://rpm.newrelic.com/",
    "https://*.hoptoadapp.com/*"
  ]
}

